<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="2"
    android:padding="4dp"
    >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:text="CNPJ Contribuinte"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
        />
        <EditText
            android:id="@+id/txtCnpjContribuinte"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="number"
        />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:text="Código de Ativação SAT"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
        />
        <EditText
            android:id="@+id/txtCodigoAtivacaoSat"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="text"
        />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:text="Confirmação do Código"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
        />
        <EditText
            android:id="@+id/txtCodConfirmacaoSat"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="text"
        />

    </TableRow>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="25sp"
        android:gravity="center">

        <Button
            android:id="@+id/btnAtivarSat"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:backgroundTint="#D6D4D4"
            android:text="Ativar"
            android:textColor="#000000"
            android:textStyle="bold" />

    </RelativeLayout>

</TableLayout>
